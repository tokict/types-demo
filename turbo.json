{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "generate"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "outputs": ["src/generated/**"]
    },
    "generate:zod": {
      "outputs": ["src/generated/**"]
    },
    "db:generate": {
      "outputs": ["src/db/generated/**"]
    }
  }
}
